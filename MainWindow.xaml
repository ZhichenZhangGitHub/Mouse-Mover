<Window x:Class="MouseMover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="鼠标移动器" Height="150" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="StartButton" Content="开始" Width="100" Margin="10" Click="StartButton_Click"/>
            <Button Name="StopButton" Content="结束" Width="100" Margin="10" Click="StopButton_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>

